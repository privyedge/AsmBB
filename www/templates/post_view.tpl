<div class="post">
  <div class="user_info">
    <img class="unread_icon" src="/images/[case:[Unread]|onepost_gray.svg|onepost.svg]">
    <a class="user_name" href="/!userinfo/[UserName]">[UserName]</a>
    <img class="avatar" src="[avatar]">
    <div class="user_pcnt">Posts: [UserPostCount]</div>
  </div>
  <div class="post_info">
    <a id="[id]" href="#[id]">#[id]</a>
    Last edited: [PostTime], read: [ReadCount] [case:[ReadCount]|times|time|times]
    <div class="edit_tools">
      [case:[special:canpost]| |<a class="quote_btn" href="!post?id=[id]"><img class="quote_icon" src="/images/quote.svg" alt="Quote | "></a>]
      [case:[special:canedit]| |<a class="edit_btn" href="!edit?id=[id]"><img class="edit_icon" src="/images/edit_gray.svg" alt="Edit | "></a>]
      [case:[special:candel] | |<a class="del_btn" href="!confirm?id=[id]"><img class="del_icon" src="/images/del_gray.svg" alt="Delete"></a>]
    </div>
  </div>
  <div class="post_text">
    [minimag:[content]]
  </div>
</div>
