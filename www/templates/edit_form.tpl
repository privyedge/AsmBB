<div class="editor">
  <form id="editform" action="/post/$slug$/" method="post">
    <p>Thread title:</p>
    <h1 class="title">$caption$</h1>
    <p>Post content:</p>
    <textarea class="editor" name="source" id="source">$source$</textarea>
    <div class="panel">
      <input type="submit" value="Submit" >
      <input type="reset" value="Revert" >
    </div>
  </form>
</div>
